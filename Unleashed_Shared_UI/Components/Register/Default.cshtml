@model Unleashed_Shared_UI.ViewModels.RegisterViewModel

<div class="login-form-container">
    <h2 class="font-poppins" style="font-size: 3rem; margin-bottom: 1.5rem; text-align: left;">Register</h2>

    <form asp-controller="Account" asp-action="Register" method="post">

        <form-input asp-for="Username"></form-input>
        <form-input asp-for="FullName"></form-input>
        <form-input asp-for="Email" type="email"></form-input>
        <form-input asp-for="PhoneNumber" type="tel"></form-input>

        <div>
            <div class="d-flex justify-content-between align-items-center mb-1">
                <label class="form-label">Password</label>
                <button type="button" class="btn btn-link text-muted btn-sm" id="togglePasswordBtn">
                    <i class="fa-solid fa-eye me-1"></i><span id="togglePasswordText">Show</span>
                </button>
            </div>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <div class="d-flex justify-content-between align-items-center mb-1">
                <label class="form-label">Confirm Password</label>
                <button type="button" class="btn btn-link text-muted btn-sm" id="toggleConfirmPasswordBtn">
                    <i class="fa-solid fa-eye me-1"></i><span id="toggleConfirmPasswordText">Show</span>
                </button>
            </div>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-check mt-3">
            <input asp-for="AcceptTerms" class="form-check-input" />
            <label class="form-check-label" asp-for="AcceptTerms">
                By continuing, you agree to the Terms of Use and Privacy Policy.
            </label>
            <div><span asp-validation-for="AcceptTerms" class="text-danger"></span></div>
        </div>

        <div class="mt-4">
            <btn text="Register" variant="Primary" is-submit="true" style="width: 100%;"></btn>
        </div>

    </form>

    <div class="py-4">
        <hr data-content="Or">
    </div>

    <div class="text-center">
        <button id="google-register-btn" class="btn btn-outline">
            <i class="fab fa-google icon"></i> Continue with Google
        </button>
    </div>
</div>