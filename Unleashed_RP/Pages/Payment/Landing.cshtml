@page
@model Unleashed_RP.Pages.Payment.LandingModel
@{
    ViewData["Title"] = Model.IsSuccess ? "Payment Successful" : "Payment Failed";
}

<style>
    .payment-container {
        max-width: 800px;
        margin-top: 5rem;
        margin-bottom: 5rem;
    }

    .payment-card {
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        overflow: hidden;
    }

    .payment-card-header {
        padding: 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        color: white;
    }

        .payment-card-header.bg-success-modern {
            background: linear-gradient(135deg, #28a745, #218838);
        }

        .payment-card-header.bg-danger-modern {
            background: linear-gradient(135deg, #dc3545, #c82333);
        }

    .payment-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
    }

    .payment-card-body {
        padding: 2rem;
    }

    .payment-card-footer {
        background-color: #f8f9fa;
        padding: 1.5rem;
        display: flex;
        justify-content: center;
        gap: 1rem;
    }

    .btn-primary-modern {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        transition: background-color 0.3s ease;
    }

        .btn-primary-modern:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .btn-secondary-modern {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        transition: background-color 0.3s ease;
    }

        .btn-secondary-modern:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

</style>

<div class="container payment-container">
    <div class="card payment-card text-center">

        @if (Model.IsSuccess)
        {
            <div class="payment-card-header bg-success-modern">
                <i class="fas fa-check-circle payment-icon"></i>
                <h2>@ViewData["Title"]</h2>
            </div>
        }
        else
        {
            <div class="payment-card-header bg-danger-modern">
                <i class="fas fa-times-circle payment-icon"></i>
                <h2>@ViewData["Title"]</h2>
            </div>
        }

        <div class="card-body payment-card-body">
            <p class="lead">
                @Model.Message
            </p>

            @if (Model.IsSuccess)
            {
                <p>Your order is now being processed. You can view your order details in your account.</p>
            }
            else
            {
                <p>No funds have been withdrawn from your account. You can try to place the order again or contact our support team if you need assistance.</p>
            }
        </div>

        <div class="card-footer payment-card-footer">
            <a asp-page="/Index" class="btn btn-primary-modern">Return to Home Page</a>
            <a asp-page="/Products/Index" class="btn btn-secondary-modern">Continue Browsing</a>
        </div>

    </div>
</div>