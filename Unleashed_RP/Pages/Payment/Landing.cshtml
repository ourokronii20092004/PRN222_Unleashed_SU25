@page
@model Unleashed_RP.Pages.Payment.LandingModel
@{
    ViewData["Title"] = Model.IsSuccess ? "Payment Successful" : "Payment Failed";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card text-center">

                @if (Model.IsSuccess)
                {
                    <div class="card-header bg-success text-white">
                        <h2>
                            <i class="fas fa-check-circle"></i> @ViewData["Title"]
                        </h2>
                    </div>
                }
                else
                {
                    <div class="card-header bg-danger text-white">
                        <h2>
                            <i class="fas fa-times-circle"></i> @ViewData["Title"]
                        </h2>
                    </div>
                }

                <div class="card-body py-4">
                    <p class="lead">
                        @Model.Message
                    </p>

                    @if (Model.IsSuccess)
                    {
                        <p>Your order is now being processed. You can view your order details in your account.</p>
                    }
                    else
                    {
                        <p>No funds have been withdrawn from your account. You can try to place the order again or contact our support team if you need assistance.</p>
                    }
                </div>

                <div class="card-footer text-muted">
                    <a asp-page="/Index" class="btn btn-primary">Return to Home Page</a>
                    <a asp-page="/Products/Index" class="btn btn-secondary">Continue Browsing</a>
                </div>

            </div>
        </div>
    </div>
</div>
