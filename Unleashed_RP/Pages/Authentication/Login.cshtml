@page
@model Unleashed_RP.Pages.Authentication.LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm p-4">
            <h1 class="card-title text-center mb-4">Welcome Back!</h1>
            <hr />
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger text-center mb-3"></div>

                <div class="mb-3">
                    <label asp-for="UserLoginDTO.UserUsername" class="form-label"></label>
                    <input asp-for="UserLoginDTO.UserUsername" class="form-control" placeholder="Your username" />
                    <span asp-validation-for="UserLoginDTO.UserUsername" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UserLoginDTO.UserPassword" class="form-label"></label>
                    <input asp-for="UserLoginDTO.UserPassword" class="form-control" type="password" placeholder="Your password" />
                    <span asp-validation-for="UserLoginDTO.UserPassword" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input type="checkbox" name="Remember" class="form-check-input" id="rememberMe" />
                    <label class="form-check-label" for="rememberMe">Remember me</label>
                </div>

                <div class="d-grid gap-2 mb-3">
                    <button type="submit" class="btn btn-primary btn-lg">Log In</button>
                </div>

                <p class="text-center">
                    Don't have an account? <a asp-page="./Register">Register here</a>.
                </p>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}