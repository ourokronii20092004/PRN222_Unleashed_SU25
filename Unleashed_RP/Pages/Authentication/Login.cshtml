@page
@model Unleashed_RP.Pages.Authentication.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null; // Use a null layout for a full-page background effect
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Unleashed</title>

    <!-- Bootstrap and Site CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Google Fonts (Poppins) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background-color: #f4f7f6;
        }

        .login-container {
            display: flex;
            align-items: stretch;
            min-height: 100vh;
        }

        /* Left Branding Panel */
        .branding-panel {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            color: white;
            padding: 4rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            flex-basis: 45%;
        }

            .branding-panel h1 {
                font-weight: 700;
                font-size: 3.5rem;
                margin-bottom: 1rem;
            }

            .branding-panel p {
                font-size: 1.25rem;
                max-width: 400px;
                opacity: 0.9;
            }

        /* Right Login Form Panel */
        .login-panel {
            padding: 3rem;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-basis: 55%;
        }

        .login-card {
            width: 100%;
            max-width: 450px;
            padding: 3rem;
            border: none;
            border-radius: 1rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

            .login-card .card-title {
                font-weight: 600;
                font-size: 2rem;
                color: #333;
            }

        /* Assuming form-input renders an input with a specific class, e.g. .form-control */
        .form-input-group .form-control {
            height: 50px;
            border-radius: 0.5rem;
        }

        .login-card .btn-primary {
            padding: 0.75rem;
            font-weight: 600;
            border-radius: 0.5rem;
            background-color: #007bff;
            border-color: #007bff;
        }

        .register-link {
            font-weight: 500;
        }

        .validation-summary-errors {
            border: 1px solid #dc3545;
            border-radius: .5rem;
            padding: 1rem;
            background-color: #f8d7da;
        }

            .validation-summary-errors ul {
                padding-left: 1.5rem;
                margin-bottom: 0;
            }

        /* Responsive adjustments */
        @@media (max-width: 992px) {
            .branding-panel {
                display: none;
            }

            .login-panel {
                flex-basis: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Left Branding Panel -->
        <div class="branding-panel">
            <h1>Unleashed</h1>
            <p>Your one-stop shop for the latest and greatest. Unleash your potential with our curated collection.</p>
        </div>

        <!-- Right Login Form Panel -->
        <div class="login-panel">
            <div class="card login-card">
                <h2 class="card-title text-center mb-2">Welcome Back!</h2>
                <p class="text-muted text-center mb-4">Please enter your credentials to log in.</p>

                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger validation-summary-errors mb-3"></div>

                    <div class="form-input-group mb-3">
                        <form-input asp-for="UserLoginDTO.UserUsername" placeholder="Username"></form-input>
                        <span asp-validation-for="UserLoginDTO.UserUsername" class="text-danger d-block mt-1"></span>
                    </div>

                    <div class="form-input-group mb-3">
                        <form-input asp-for="UserLoginDTO.UserPassword" type="password" placeholder="Password"></form-input>
                        <span asp-validation-for="UserLoginDTO.UserPassword" class="text-danger d-block mt-1"></span>
                    </div>

                    <div class="d-grid gap-2 my-4">
                        <btn Text="Log In" is-submit=true Variant="Primary" class="btn-lg"></btn>
                    </div>

                    <p class="text-center register-link">
                        Don't have an account? <a asp-page="./Register">Register here</a>
                    </p>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}