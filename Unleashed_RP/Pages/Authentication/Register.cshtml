@page
@model Unleashed_RP.Pages.Authentication.RegisterModel
@addTagHelper *, Unleashed_Shared_UI
@{
    ViewData["Title"] = "Create Account";
    Layout = null; // Use a null layout for a full-page background effect
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Unleashed</title>

    <!-- Bootstrap and Site CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Google Fonts (Poppins) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background-color: #f4f7f6;
        }

        .register-container {
            display: flex;
            align-items: stretch;
            min-height: 100vh;
        }

        /* Left Branding Panel */
        .branding-panel {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            color: white;
            padding: 4rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            flex-basis: 45%;
        }

            .branding-panel h1 {
                font-weight: 700;
                font-size: 3.5rem;
                margin-bottom: 1rem;
            }

            .branding-panel p {
                font-size: 1.25rem;
                max-width: 400px;
                opacity: 0.9;
            }

        /* Right Register Form Panel */
        .register-panel {
            padding: 3rem;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-basis: 55%;
        }

        .register-card {
            width: 100%;
            max-width: 800px; /* Wider card for the registration form */
            padding: 3rem;
            border: none;
            border-radius: 1rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            background-color: white;
        }

            .register-card .card-title {
                font-weight: 600;
                font-size: 2rem;
                color: #333;
            }

        /* Assuming form-input renders an input with a specific class, e.g. .form-control */
        .form-input-group .form-control, .form-group .form-control {
            height: 50px;
            border-radius: 0.5rem;
        }

        .register-card .btn-primary {
            padding: 0.75rem;
            font-weight: 600;
            border-radius: 0.5rem;
            background-color: #007bff;
            border-color: #007bff;
        }

        .login-link {
            font-weight: 500;
        }

        .form-group label {
            margin-bottom: 0.5rem;
        }

        /* Responsive adjustments */
        @@media (max-width: 992px) {
            .branding-panel {
                display: none;
            }

            .register-panel {
                flex-basis: 100%;
                padding: 1.5rem;
            }

            .register-card {
                padding: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="register-container">
        <!-- Left Branding Panel -->
        <div class="branding-panel">
            <h1>Join Us</h1>
            <p>Create your account to unlock exclusive features and start your journey with Unleashed today.</p>
        </div>

        <!-- Right Register Form Panel -->
        <div class="register-panel">
            <div class="card register-card">
                <h2 class="card-title text-center mb-2">Create Your Account</h2>
                <p class="text-muted text-center mb-4">It's quick and easy.</p>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center mb-4" role="alert"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <form-input asp-for="RegisterUserDTO.UserUsername" placeholder="Username"></form-input>
                            <span asp-validation-for="RegisterUserDTO.UserUsername" class="text-danger d-block mt-1"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <form-input asp-for="RegisterUserDTO.UserFullname" placeholder="Full name"></form-input>
                            <span asp-validation-for="RegisterUserDTO.UserFullname" class="text-danger d-block mt-1"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <form-input asp-for="RegisterUserDTO.UserPassword" type="password" placeholder="Password"></form-input>
                            <span asp-validation-for="RegisterUserDTO.UserPassword" class="text-danger d-block mt-1"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <form-input asp-for="RegisterUserDTO.UserEmail" type="email" placeholder="Email address"></form-input>
                            <span asp-validation-for="RegisterUserDTO.UserEmail" class="text-danger d-block mt-1"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <form-input asp-for="RegisterUserDTO.UserPhone" type="tel" placeholder="Phone number"></form-input>
                            <span asp-validation-for="RegisterUserDTO.UserPhone" class="text-danger d-block mt-1"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            @* <label asp-for="RegisterUserDTO.UserBirthdate" class="form-label text-muted ms-1">Birthdate</label> *@
                            <form-input asp-for="RegisterUserDTO.UserBirthdate" type="date"></form-input>
                            <span asp-validation-for="RegisterUserDTO.UserBirthdate" class="text-danger d-block mt-1"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <form-input asp-for="RegisterUserDTO.UserAddress" placeholder="Address"></form-input>
                        <span asp-validation-for="RegisterUserDTO.UserAddress" class="text-danger d-block mt-1"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label class="form-label d-block text-muted fw-semibold mb-2">Gender</label>
                        <div class="form-check form-check-inline me-4">
                            <input class="form-check-input" type="radio" value="false" asp-for="RegisterUserDTO.Gender" id="genderMale" />
                            <label class="form-check-label" for="genderMale">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" value="true" asp-for="RegisterUserDTO.Gender" id="genderFemale" />
                            <label class="form-check-label" for="genderFemale">Female</label>
                        </div>
                        <span asp-validation-for="RegisterUserDTO.Gender" class="text-danger d-block mt-1"></span>
                    </div>

                    <div class="d-grid gap-2 mb-4">
                        <button type="submit" class="btn btn-primary btn-lg fw-bold">Create Account</button>
                    </div>

                    <p class="text-center text-muted login-link">
                        Already have an account? <a asp-page="./Login" class="text-decoration-none fw-semibold">Log in here</a>.
                    </p>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}