@page
@model Unleashed_RP.Pages.Authentication.RegisterModel
@addTagHelper *, Unleashed_Shared_UI
@{
    ViewData["Title"] = "Create Account";
}

<div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">
        @* Increased column size for a slightly wider form *@
        <div class="card shadow-lg p-5 border-0 rounded-4">
            @* More pronounced shadow, padding, no border, rounded corners *@
            <h1 class="card-title text-center mb-5 fw-bold text-primary">Join Unleashed Today!</h1> @* Bold, primary color title *@
            <hr class="mb-4" /> @* Smaller margin bottom for hr *@
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center mb-4" role="alert"></div> @* Used Bootstrap alert for validation summary *@

                <form-input asp-for="RegisterUserDTO.UserUsername" placeholder="Username"></form-input>
                <form-input asp-for="RegisterUserDTO.UserPassword" type="password" placeholder="Password"></form-input>
                <form-input asp-for="RegisterUserDTO.UserFullname" placeholder="Full name"></form-input>
                <form-input asp-for="RegisterUserDTO.UserEmail" type="email" placeholder="Email address"></form-input>
                <form-input asp-for="RegisterUserDTO.UserPhone" type="tel" placeholder="Phone number"></form-input>
                <form-input asp-for="RegisterUserDTO.UserBirthdate" type="date"></form-input> @* Type date will show date picker *@
                <form-input asp-for="RegisterUserDTO.UserAddress" placeholder="Address"></form-input>

                <div class="form-group mb-4">
                    @* Kept this div for manual control over radio buttons *@
                    <label class="form-label d-block text-muted fw-semibold mb-2">Gender</label> @* Slightly more subtle label for gender *@
                    <div class="form-check form-check-inline me-4">
                        @* Increased margin between radio buttons *@
                        <input class="form-check-input" type="radio" value="false" asp-for="RegisterUserDTO.Gender" id="genderMale" />
                        <label class="form-check-label" for="genderMale">Male</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" value="true" asp-for="RegisterUserDTO.Gender" id="genderFemale" />
                        <label class="form-check-label" for="genderFemale">Female</label>
                    </div>
                    <span asp-validation-for="RegisterUserDTO.Gender" class="text-danger d-block mt-1"></span>
                </div>

                <div class="d-grid gap-2 mb-4">
                    @* Increased margin bottom for button *@
                    <button type="submit" class="btn btn-primary btn-lg fw-bold">Create Account</button> @* Bold button text *@
                </div>

                <p class="text-center text-muted">
                    @* Subtle text color *@
                    Already have an account? <a asp-page="./Login" class="text-decoration-none fw-semibold">Log in here</a>. @* No underline, bold link *@
                </p>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}