@page
@model Unleashed_RP.Pages.Authentication.RegisterModel

@{
    ViewData["Title"] = "Create Account";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm p-4">
            <h1 class="card-title text-center mb-4">Create Your Account</h1>
            <hr />
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

                <div class="mb-3">
                    <label asp-for="RegisterUserDTO.UserUsername" class="form-label"></label>
                    <input asp-for="RegisterUserDTO.UserUsername" class="form-control" placeholder="Choose a username" />
                    <span asp-validation-for="RegisterUserDTO.UserUsername" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RegisterUserDTO.UserPassword" class="form-label"></label>
                    <input asp-for="RegisterUserDTO.UserPassword" class="form-control" type="password" placeholder="Set a strong password" />
                    <span asp-validation-for="RegisterUserDTO.UserPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RegisterUserDTO.UserFullname" class="form-label"></label>
                    <input asp-for="RegisterUserDTO.UserFullname" class="form-control" placeholder="Enter your full name" />
                    <span asp-validation-for="RegisterUserDTO.UserFullname" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RegisterUserDTO.UserEmail" class="form-label"></label>
                    <input asp-for="RegisterUserDTO.UserEmail" class="form-control" type="email" placeholder="Your active email address" />
                    <span asp-validation-for="RegisterUserDTO.UserEmail" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RegisterUserDTO.UserPhone" class="form-label"></label>
                    <input asp-for="RegisterUserDTO.UserPhone" class="form-control" type="tel" placeholder="Your phone number (optional)" />
                    <span asp-validation-for="RegisterUserDTO.UserPhone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RegisterUserDTO.UserBirthdate" class="form-label"></label>
                    <input type="date" asp-for="RegisterUserDTO.UserBirthdate" class="form-control" />
                    <span asp-validation-for="RegisterUserDTO.UserBirthdate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RegisterUserDTO.UserAddress" class="form-label"></label>
                    <input asp-for="RegisterUserDTO.UserAddress" class="form-control" placeholder="Your full address" />
                    <span asp-validation-for="RegisterUserDTO.UserAddress" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label d-block">Gender</label>
                    <div class="form-check form-check-inline me-3">
                        <input class="form-check-input" type="radio" value="false" asp-for="RegisterUserDTO.Gender" id="genderMale" />
                        <label class="form-check-label" for="genderMale">Male</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" value="true" asp-for="RegisterUserDTO.Gender" id="genderFemale" />
                        <label class="form-check-label" for="genderFemale">Female</label>
                    </div>
                    <span asp-validation-for="RegisterUserDTO.Gender" class="text-danger d-block mt-1"></span>
                </div>

                <div class="d-grid gap-2 mb-3">
                    <button type="submit" class="btn btn-primary btn-lg">Register</button>
                </div>

                <p class="text-center">
                    Already have an account? <a asp-page="./Login">Log in here</a>.
                </p>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}