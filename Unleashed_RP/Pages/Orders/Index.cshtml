    <tbody>
@foreach (var item in Model.Order) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderTotalAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderTrackingNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNote)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderBillingAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderExpectedDeliveryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderTransactionReference)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderTax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderCreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderUpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount.DiscountCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InchargeEmployee.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus.OrderStatusId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentMethod.PaymentMethodId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingMethod.ShippingMethodId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.OrderId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.OrderId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.OrderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
