@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderTotalAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderTrackingNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderNote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderBillingAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderExpectedDeliveryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderTransactionReference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderTax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderCreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderUpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].InchargeEmployee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].PaymentMethod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].ShippingMethod)
