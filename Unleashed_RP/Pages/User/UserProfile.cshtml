@page
@model Unleashed_RP.Pages.User.UserProfileModel

@{
    ViewData["Title"] = "User Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">User Profile</h2>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <input hidden asp-for="User.IsUserEnabled"/>
                            <div class="text-center mb-4">
                                @* Use a label to make the image clickable and trigger the file input *@
                                <label for="imageUpload" style="cursor: pointer;">
                                    @if (!string.IsNullOrEmpty(Model.User.UserImage))
                                    {
                                        <img id="profileImage" src="@Model.User.UserImage" class="rounded-circle mb-3 border border-3 border-primary" alt="User Image" style="width: 150px; height: 150px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <img id="profileImage" src="https://via.placeholder.com/150?text=Click+to+Upload" class="rounded-circle mb-3 border border-3 border-secondary" alt="Placeholder Image" style="width: 150px; height: 150px; object-fit: cover;">
                                    }
                                </label>

                              <input type="file" id="imageUpload" asp-for="NewUserImage" accept="image/*" class="d-none" onchange="previewImage(event)" />

                                <h3 class="mt-3">
                                    <input asp-for="User.UserFullname" class="form-control text-center fs-3 fw-bold border-0 bg-transparent" />
                                </h3>
                                <p class="text-muted">@@@Html.DisplayFor(model => model.User.UserUsername)</p>
                                <input hidden asp-for="User.UserUsername" class="form-control text-center fs-3 fw-bold border-0 bg-transparent" />
                            </div>
                        <hr />

                        <h5 class="mb-3">Account Activity</h5>
                        <dl class="row mb-4">
                            <dt class="col-sm-4">Joined:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.User.UserCreatedAt)</dd>

                            <dt class="col-sm-4">Last Updated:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.User.UserUpdatedAt)</dd>
                        </dl>

                        <h5 class="mb-3">Personal Details</h5>
                        <div class="row mb-4">
                            <div class="col-sm-4">Email:</div>
                            <div class="col-sm-8">
                                <input disabled asp-for="User.UserEmail" class="form-control" />
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-sm-4">Phone:</div>
                            <div class="col-sm-8">
                                <input asp-for="User.UserPhone" class="form-control" />
                                <span asp-validation-for="User.UserPhone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-sm-4">Birthdate:</div>
                            <div class="col-sm-8">
                                <input asp-for="User.UserBirthdate" class="form-control" type="date" />
                                <span asp-validation-for="User.UserBirthdate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label d-block text-muted fw-semibold mb-2">Gender</label>
                            <div class="form-check form-check-inline me-4">
                                @* Increased margin between radio buttons *@
                                <input class="form-check-input" type="radio" value="false" asp-for="User.Gender" id="genderMale" />
                                <label class="form-check-label" for="genderMale">Male</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" value="true" asp-for="User.Gender" id="genderFemale" />
                                <label class="form-check-label" for="genderFemale">Female</label>
                            </div>
                            <span asp-validation-for="User.Gender" class="text-danger d-block mt-1"></span>
                        </div>

                        <div class="row mb-4">
                            <div class="col-sm-4">Address:</div>
                            <div class="col-sm-8">
                                <textarea asp-for="User.UserAddress" class="form-control"></textarea>
                                <span asp-validation-for="User.UserAddress" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="card-footer text-center mt-4">
                            <btn is-submit=true Text="Save changes" variant="Primary"></btn>
                            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script>
            function previewImage(event) {
                const reader = new FileReader();
                reader.onload = function(){
                    const output = document.getElementById('profileImage');
                    output.src = reader.result;
                };
                reader.readAsDataURL(event.target.files[0]);
            }
        </script>
    }
}