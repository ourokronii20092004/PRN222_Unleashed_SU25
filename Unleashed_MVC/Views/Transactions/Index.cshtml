@model IEnumerable<DAL.DTOs.TransactionDTOs.TransactionCardDTO>

@{
    ViewData["Title"] = "Transactions";
}

<h1>Transactions</h1>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Product Details</th>
                <th>Type</th>
                <th>Stock Location</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Employee</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <strong>@Html.DisplayFor(modelItem => item.ProductName)</strong><br />
                        <small class="text-muted">
                            @Html.DisplayFor(modelItem => item.BrandName) - @Html.DisplayFor(modelItem => item.CategoryName)<br />
                            Size: @Html.DisplayFor(modelItem => item.SizeName), Color: @Html.DisplayFor(modelItem => item.ColorName)
                        </small>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TransactionTypeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StockName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TransactionQuantity)
                    </td>
                    <td>
                        @String.Format("{0:C}", item.TransactionProductPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InchargeEmployeeUsername)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TransactionDate)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>