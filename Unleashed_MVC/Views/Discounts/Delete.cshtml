@model DAL.DTOs.DiscountDTOs.DiscountDTO

@{
    ViewData["Title"] = "Delete Discount";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <strong>Warning!</strong> Are you sure you want to permanently delete this discount? This action cannot be undone.
                    </div>

                    <h3 class="mb-3">Discount Details:</h3>
                    <dl class="row">
                        <dt class="col-sm-4">Code</dt>
                        <dd class="col-sm-8"><code>@Model.DiscountCode</code></dd>

                        <dt class="col-sm-4">Type</dt>
                        <dd class="col-sm-8">@Model.DiscountTypeName</dd>

                        <dt class="col-sm-4">Value</dt>
                        <dd class="col-sm-8">@Model.DiscountValue.ToString("N0")</dd>
                    </dl>

                    <hr />
                    <form asp-action="Delete" asp-route-id="@Model.DiscountId">
                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancel</a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash3-fill"></i> Delete Permanently
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>