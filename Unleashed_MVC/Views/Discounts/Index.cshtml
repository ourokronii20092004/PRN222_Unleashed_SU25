@model IEnumerable<DAL.DTOs.DiscountDTOs.DiscountDTO>

@{
    ViewData["Title"] = "Discount Management";
}

<h1>Discount List</h1>

<p><a asp-action="Create" class="btn btn-primary">Create New</a></p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Type</th>
            <th>Value</th>
            <th>Status</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DiscountCode</td>
                <td>@item.DiscountTypeName</td>
                <td>@item.DiscountValue.ToString("N0")</td>
                <td>@item.DiscountStatusName</td>
                <td>@item.DiscountStartDate.ToString("g")</td>
                <td>@item.DiscountEndDate.ToString("g")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DiscountId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DiscountId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DiscountId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>