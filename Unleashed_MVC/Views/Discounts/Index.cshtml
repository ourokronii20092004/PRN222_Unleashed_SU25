@model IEnumerable<DAL.Models.Discount>

@{
    ViewData["Title"] = "Discount Management";
}

<h1>Discount List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Description</th>
            <th>Value</th>
            <th>Type</th>
            <th>Status</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.DiscountCode)</td>
                <td>@Html.DisplayFor(modelItem => item.DiscountDescription)</td>
                <td>@Html.DisplayFor(modelItem => item.DiscountValue)</td>
                <td>@Html.DisplayFor(modelItem => item.DiscountType.DiscountTypeName)</td>
                <td>@Html.DisplayFor(modelItem => item.DiscountStatus.DiscountStatusName)</td>
                <td>@item.DiscountStartDate.DateTime.ToShortDateString()</td>
                <td>@item.DiscountEndDate.DateTime.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DiscountId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DiscountId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DiscountId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>