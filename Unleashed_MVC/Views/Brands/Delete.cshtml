@model DAL.Models.Brand

@{
    ViewData["Title"] = "Delete Brand";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> @ViewData["Title"]: @Model.BrandName</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <strong>Warning!</strong> Are you sure you want to delete this brand? This action cannot be undone.
                    </div>

                    @if (!string.IsNullOrEmpty(Model.BrandImageUrl))
                    {
                        <div class="text-center mb-3">
                            <img src="@Model.BrandImageUrl" alt="@Model.BrandName" class="img-fluid rounded shadow-sm" style="max-height: 150px;"
                                 onerror="this.onerror=null;this.src='/images/placeholder-image.png';" />
                        </div>
                    }

                    <h5 class="text-center mb-3">Brand: @Html.DisplayFor(model => model.BrandName)</h5>

                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.BrandDescription)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.BrandDescription)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.BrandWebsiteUrl)</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.BrandWebsiteUrl))
                            {
                                <a href="@Model.BrandWebsiteUrl" target="_blank" rel="noopener noreferrer">
                                    @Model.BrandWebsiteUrl <i class="bi bi-box-arrow-up-right ms-1"></i>
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.BrandCreatedAt)</dt>
                        <dd class="col-sm-8">
                            @(Model.BrandCreatedAt.HasValue ? Model.BrandCreatedAt.Value.ToString("F") : "N/A")
                        </dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.BrandUpdatedAt)</dt>
                        <dd class="col-sm-8">
                            @(Model.BrandUpdatedAt.HasValue ? Model.BrandUpdatedAt.Value.ToString("F") : "N/A")
                        </dd>
                    </dl>

                    <hr />
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="BrandId" />
                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-2">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash3-fill"></i> Delete Permanently
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>