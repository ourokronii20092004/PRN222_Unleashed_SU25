@model IEnumerable<DAL.Models.Order>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Order Management</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f4f7fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .container {
            max-width: 1200px;
        }

        .card {
            border: none;
            border-radius: 10px;
            transition: transform 0.2s;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
            }

        .card-header {
            background-color: #ffffff;
            border-bottom: 1px solid #e9ecef;
            padding: 1.5rem;
        }

        .table {
            border-radius: 8px;
            overflow: hidden;
        }

            .table th {
                background-color: #007bff;
                color: white;
                font-weight: 500;
                text-transform: uppercase;
                letter-spacing: 0.05em;
            }

            .table td {
                vertical-align: middle;
            }

        .badge {
            padding: 0.5em 1em;
            font-size: 0.9em;
            border-radius: 12px;
            font-weight: 500;
        }

        .btn-group .btn {
            border-radius: 6px;
            margin-right: 5px;
            transition: all 0.2s;
        }

            .btn-group .btn:hover {
                transform: translateY(-2px);
            }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .form-select {
            max-width: 200px;
            border-radius: 6px;
            border: 1px solid #ced4da;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f8f9fa;
        }

        .table-hover tbody tr:hover {
            background-color: #e9ecef;
        }

        h2 {
            color: #343a40;
            font-weight: 600;
            margin-bottom: 1.5rem;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>Order Management</h2>

        <div class="card shadow-sm mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">All Orders</h5>
                <div>
                    <select id="statusFilter" class="form-select form-select-sm">
                        <option value="">All Statuses</option>
                        <option value="5">Pending</option>
                        <option value="2">Approved</option>
                        <option value="1">Cancelled</option>
                    </select>
                </div>
            </div>
            <div class="card-body p-4">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Date</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.OrderId</td>
                                    <td>@item.OrderDate</td>
                                    <td>$@item.OrderTotalAmount</td>
                                    <td>
                                        <span class="badge @GetStatusBadge(item.OrderStatus?.OrderStatusId ?? 0)">
                                            @GetStatusName(item.OrderStatus?.OrderStatusId ?? 0)
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@item.OrderId"
                                               class="btn btn-info text-white">View</a>

                                            @if (item.OrderStatus?.OrderStatusId == 5)
                                            {
                                                <form asp-action="Approve" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@item.OrderId" />
                                                    <button type="submit" class="btn btn-success text-white">Approve</button>
                                                </form>
                                            }

                                            @if (item.OrderStatus?.OrderStatusId != 1)
                                            {
                                                <form asp-action="Cancel" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@item.OrderId" />
                                                    <button type="submit" class="btn btn-danger text-white">Cancel</button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    @functions {
        string GetStatusName(int statusId)
        {
            return statusId switch
            {
                1 => "Cancelled",
                2 => "Approved",
                5 => "Pending",
                _ => "Unknown"
            };
        }

        string GetStatusBadge(int statusId)
        {
            return statusId switch
            {
                1 => "bg-danger text-white",
                2 => "bg-success text-white",
                5 => "bg-warning text-dark",
                _ => "bg-secondary text-white"
            };
        }
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('statusFilter').addEventListener('change', function() {
            const statusId = this.value;
            window.location.href = `@Url.Action("Index")?statusId=${statusId}`;
        });

        // Set the selected value from query string
        const urlParams = new URLSearchParams(window.location.search);
        const statusId = urlParams.get('statusId');
        if (statusId) {
            document.getElementById('statusFilter').value = statusId;
        }
    </script>
</body>
</html>