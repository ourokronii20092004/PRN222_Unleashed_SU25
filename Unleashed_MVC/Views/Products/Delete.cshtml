@model DAL.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Product</h1>

<h3>Are you sure you want to delete this product?</h3>
<div>
    <h4>Product Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductCode)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCreatedAt)
        </dt>
        <dd class="col-sm-10">
            @(Model.ProductCreatedAt.HasValue? Model.ProductCreatedAt.Value.ToString("g") : "No date provided")
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductUpdatedAt)
        </dt>
        <dd class="col-sm-10">
            @(Model.ProductUpdatedAt.HasValue? Model.ProductUpdatedAt.Value.ToString("g") : "No date provided")
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand.BrandName)  
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductStatus.ProductStatusName)  
        </dd>
    </dl>

    <form method="post" asp-action="Delete">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
