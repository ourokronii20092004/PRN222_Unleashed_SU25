@model DAL.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container">
    <h1>Product Details</h1>
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Basic Information</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Product Name</dt>
                        <dd class="col-sm-8">@Model.ProductName</dd>

                        <dt class="col-sm-4">Product Code</dt>
                        <dd class="col-sm-8">@Model.ProductCode</dd>

                        <dt class="col-sm-4">Brand</dt>
                        <dd class="col-sm-8">@Model.Brand?.BrandName</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">@Model.ProductStatus?.ProductStatusName</dd>

                        <dt class="col-sm-4">Created At</dt>
                        <dd class="col-sm-8">
                            @(Model.ProductCreatedAt.HasValue? Model.ProductCreatedAt.Value.ToString("g") : "No date provided")
                        </dd>

                        <dt class="col-sm-4">Updated At</dt>
                        <dd class="col-sm-8">
                            @(Model.ProductUpdatedAt.HasValue? Model.ProductUpdatedAt.Value.ToString("g") : "No date provided")
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12">
                    <dt>Description</dt>
                    <dd>@(string.IsNullOrEmpty(Model.ProductDescription) ? "No description provided" : Model.ProductDescription)</dd>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Variations != null && Model.Variations.Any())
    {
        <div class="card">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">Product Variations</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>Color</th>
                                <th>Size</th>
                                <th>Price</th>
                                <th>Image</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var variation in Model.Variations)
                            {
                                <tr>
                                    <td>@variation.Color?.ColorName</td>
                                    <td>@variation.Size?.SizeName</td>
                                    <td>
                                        @if (variation.VariationPrice.HasValue)
                                        {
                                            @variation.VariationPrice.Value.ToString("C")
                                        }
                                        else
                                        {
                                            <span>No price available</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(variation.VariationImage))
                                        {
                                            <img src="@variation.VariationImage" alt="Variation Image" style="max-width: 100px; max-height: 100px;" />
                                        }
                                        else
                                        {
                                            <span>No image</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">No variations found for this product.</div>
    }

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Styles {
    <style>
        dt {
            font-weight: 600;
        }

        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .card-header {
            padding: 0.75rem 1.25rem;
        }
    </style>
}
