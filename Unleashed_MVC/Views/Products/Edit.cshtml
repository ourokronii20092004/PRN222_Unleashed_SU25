@model DAL.DTOs.ProductDTOs.ProductDTO

@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" asp-route-id="@Model.ProductId" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" asp-for="CreatedAt" />

            <!-- Main Product Info -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Basic Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ProductName" class="control-label"></label>
                                <input asp-for="ProductName" class="form-control" placeholder="Enter product name" />
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ProductCode" class="control-label"></label>
                                <input asp-for="ProductCode" class="form-control" readonly />
                                <span asp-validation-for="ProductCode" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="ProductDescription" class="control-label"></label>
                        <textarea asp-for="ProductDescription" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="ProductDescription" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="BrandId" class="control-label"></label>
                                <select asp-for="BrandId" class="form-control" asp-items="ViewBag.BrandId">
                                    <option value="">-- Select Brand --</option>
                                </select>
                                <span asp-validation-for="BrandId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ProductStatusId" class="control-label"></label>
                                <select asp-for="ProductStatusId" class="form-control" asp-items="ViewBag.ProductStatusId">
                                    <option value="">-- Select Status --</option>
                                </select>
                                <span asp-validation-for="ProductStatusId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Variations Section -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Product Variations</h5>
                    <button type="button" class="btn btn-sm btn-success" id="addVariationBtn">Add Variation</button>
                </div>
                <div class="card-body" id="variationsContainer">
                    @for (var i = 0; i < Model.Variations.Count; i++)
                    {
                        <div class="variation-card card mb-3">
                            <div class="card-body">
                                <input type="hidden" asp-for="Variations[i].SizeId" />
                                <input type="hidden" asp-for="Variations[i].ColorId" />

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="Variations[i].SizeId" class="control-label"></label>
                                            <select asp-for="Variations[i].SizeId" class="form-control" asp-items="ViewBag.SizeId">
                                                <option value="">-- Select Size --</option>
                                            </select>
                                            <span asp-validation-for="Variations[i].SizeId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="Variations[i].ColorId" class="control-label"></label>
                                            <select asp-for="Variations[i].ColorId" class="form-control" asp-items="ViewBag.ColorId">
                                                <option value="">-- Select Color --</option>
                                            </select>
                                            <span asp-validation-for="Variations[i].ColorId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="Variations[i].ProductPrice" class="control-label"></label>
                                            <input asp-for="Variations[i].ProductPrice" class="form-control" type="number" step="0.01" min="0.01" />
                                            <span asp-validation-for="Variations[i].ProductPrice" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <!-- Display current image if exists -->
                                    @if (!string.IsNullOrEmpty(Model.Variations[i].ProductVariationImageUrl))
                                    {
                                        <div class="mb-3">
                                            <label class="control-label">Current Image</label>
                                            <div class="d-flex align-items-center">
                                                <img src="@Model.Variations[i].ProductVariationImageUrl" alt="Variation Image" class="img-thumbnail mr-3" style="max-height: 100px;" />
                                                <div class="flex-grow-1">
                                                    <div class="input-group">
                                                        <input type="text" class="form-control form-control-sm" value="@Model.Variations[i].ProductVariationImageUrl" readonly>
                                                        <div class="input-group-append">
                                                            <button class="btn btn-outline-secondary btn-sm" type="button" onclick="copyToClipboard('@Model.Variations[i].ProductVariationImageUrl')">
                                                                <i class="fas fa-copy"></i>
                                                            </button>
                                                            <a href="@Model.Variations[i].ProductVariationImageUrl" target="_blank" class="btn btn-outline-primary btn-sm">
                                                                <i class="fas fa-external-link-alt"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                    <div class="form-group">
                                        <label class="control-label">@(string.IsNullOrEmpty(Model.Variations[i].ProductVariationImageUrl) ? "Upload Image" : "Change Image")</label>
                                        <input name="Variations[@i].ProductVariationFile" class="form-control-file" type="file" accept="image/*" />
                                        <small class="form-text text-muted">JPEG, PNG or GIF, max 5MB</small>
                                        <span asp-validation-for="Variations[i].ProductVariationFile" class="text-danger small"></span>
                                    </div>
                                </div>

                                @if (i > 0)
                                {
                                    <button type="button" class="btn btn-sm btn-danger remove-variation">
                                        <i class="fas fa-trash"></i> Remove
                                    </button>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        $(document).ready(function() {
            // Add new variation
            $('#addVariationBtn').click(function() {
                var index = $('#variationsContainer .variation-card').length;
                var html = `
                <div class="variation-card card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label">Size</label>
                                    <select name="Variations[${index}].SizeId" class="form-control">
                                        @foreach (var item in (SelectList)ViewBag.SizeId)
                                        {
                                                <option value="@item.Value">@item.Text</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label">Color</label>
                                    <select name="Variations[${index}].ColorId" class="form-control">
                                        @foreach (var item in (SelectList)ViewBag.ColorId)
                                        {
                                                <option value="@item.Value">@item.Text</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label">Price</label>
                                    <input name="Variations[${index}].ProductPrice" class="form-control" type="number" step="0.01" min="0.01" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Upload Image</label>
                            <input name="Variations[${index}].ProductVariationFile" class="form-control-file" type="file" accept="image/*" />
                            <small class="form-text text-muted">JPEG, PNG or GIF, max 5MB</small>
                        </div>

                        <button type="button" class="btn btn-sm btn-danger remove-variation">
                            <i class="fas fa-trash"></i> Remove
                        </button>
                    </div>
                </div>`;
                $('#variationsContainer').append(html);
            });

            // Remove variation
            $(document).on('click', '.remove-variation', function() {
                $(this).closest('.variation-card').remove();
                // Reindex all remaining variations
                $('#variationsContainer .variation-card').each(function(i) {
                    $(this).find('select, input').each(function() {
                        var name = $(this).attr('name').replace(/\[\d+\]/, `[${i}]`);
                        $(this).attr('name', name);
                    });
                });
            });
        });

        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                toastr.success('Image URL copied to clipboard!');
            }, function(err) {
                toastr.error('Could not copy text: ' + err);
            });
        }
    </script>

    <style>
        .variation-card {
            border-left: 4px solid #6c757d;
        }

            .variation-card:hover {
                border-left-color: #007bff;
            }

        .img-thumbnail {
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
        }
    </style>
}