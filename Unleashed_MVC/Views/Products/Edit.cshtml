@model DAL.DTOs.ProductDTOs.ProductDTO

@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />

            <!-- Brand Dropdown -->
            <div class="form-group">
                <label for="BrandId" class="control-label">Brand</label>
                <select asp-for="BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>

            <!-- Product Status Dropdown -->
            <div class="form-group">
                <label for="ProductStatusId" class="control-label">Product Status</label>
                <select asp-for="ProductStatusId" class="form-control" asp-items="ViewBag.ProductStatusId"></select>
                <span asp-validation-for="ProductStatusId" class="text-danger"></span>
            </div>


            <!-- Variations List -->
            @for (var i = 0; i < Model.Variations.Count; i++)
            {
                <div class="card mt-3 p-3">
                    <h5>Variation</h5>

                    <div class="form-group">
                        <label asp-for="Variations[@i].SizeId" class="control-label">Size</label>
                        <select asp-for="Variations[@i].SizeId" class="form-control" asp-items="ViewBag.SizeId"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Variations[@i].ColorId" class="control-label">Color</label>
                        <select asp-for="Variations[@i].ColorId" class="form-control" asp-items="ViewBag.ColorId"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Variations[@i].ProductVariationImage" class="control-label">Variation Image</label>
                        <input asp-for="Variations[@i].ProductVariationImage" class="form-control" type="file" />
                        <span asp-validation-for="Variations[@i].ProductVariationImage" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Variations[@i].ProductPrice" class="control-label">Variation Price</label>
                        <input asp-for="Variations[@i].ProductPrice" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Variations[@i].ProductPrice" class="text-danger"></span>
                    </div>
                </div>
            }



            <!-- Main Product Information -->
            <div class="form-group mt-3">
                <label asp-for="ProductName" class="control-label">Product Name</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductCode" class="control-label">Product Code</label>
                <input asp-for="ProductCode" class="form-control" />
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label">Product Description</label>
                <input asp-for="ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Product List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
