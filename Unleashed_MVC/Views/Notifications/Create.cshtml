@model DAL.DTOs.NotificationDTOs.NotificationCreateDTO

@{
    ViewData["Title"] = "Create Notification";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <div class="card-header bg-primary text-white text-center rounded-top py-3">
            <h2 class="card-title mb-0">Create New Notification</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <div class="mb-3">
                    <label asp-for="NotificationTitle" class="form-label fw-bold">
                        <i class="bi bi-card-heading me-2"></i> @Html.DisplayNameFor(model => model.NotificationTitle)
                    </label>
                    <input asp-for="NotificationTitle" class="form-control" />
                    <span asp-validation-for="NotificationTitle" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NotificationContent" class="form-label fw-bold">
                        <i class="bi bi-file-earmark-text-fill me-2"></i> @Html.DisplayNameFor(model => model.NotificationContent)
                    </label>
                    <textarea asp-for="NotificationContent" class="form-control" rows="5"></textarea> 
                    <span asp-validation-for="NotificationContent" class="text-danger"></span>
                </div>

                <div class="form-check form-switch mb-4">
                    <input class="form-check-input" type="checkbox" role="switch" asp-for="IsNotificationDraft" id="isDraftSwitch">
                    <label class="form-check-label fw-bold" for="isDraftSwitch">
                        <i class="bi bi-toggle-on me-2"></i> Is Drafted
                    </label>
                    <span asp-validation-for="IsNotificationDraft" class="text-danger d-block mt-1"></span>
                </div>

                <div class="d-grid mb-3">
                    {{ d-grid for a full-width submit button }}
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle-fill me-2"></i> Create Notification
                    </button>
                </div>
            </form>
        </div>
        <div class="card-footer d-flex justify-content-end bg-light rounded-bottom py-3">
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="bi bi-arrow-left-circle-fill me-2"></i> Back to List
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}