@using DAL.DTOs.StockDTOs
@model StockUpdateDTO

@{
    ViewData["Title"] = "Edit Stock Location";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="bi bi-pencil-square me-2"></i>@ViewData["Title"]</h1>
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Editing: @Model.StockName</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@Model.StockId" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert">
                            Please correct the errors below.
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>

                        <input type="hidden" asp-for="StockId" /> @* Important for POST to identify entity *@

                        <div class="mb-3">
                            <label asp-for="StockName" class="form-label fw-bold"></label>
                            <input asp-for="StockName" class="form-control" />
                            <span asp-validation-for="StockName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="StockAddress" class="form-label fw-bold"></label>
                            <textarea asp-for="StockAddress" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="StockAddress" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save-fill me-1"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-light border">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}