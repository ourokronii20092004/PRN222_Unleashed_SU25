@model DAL.Models.Stock

@{
    ViewData["Title"] = "Delete Stock Location";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="bi bi-trash3-fill me-2 text-danger"></i>@ViewData["Title"]</h1>
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                </a>
            </div>

            @if (ViewData["ErrorMessageFromDeletePost"] != null)
            {
                <div class="alert alert-danger">@ViewData["ErrorMessageFromDeletePost"]</div>
            }

            <div class="alert alert-danger text-center">
                <h4 class="alert-heading">Are you sure you want to delete this?</h4>
                <p>This action cannot be undone.</p>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Confirm Deletion of: @Model.StockName</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.StockName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.StockName)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.StockAddress)
                        </dt>
                        <dd class="col-sm-8">
                            @(string.IsNullOrWhiteSpace(Model.StockAddress) ? "N/A" : Model.StockAddress)
                        </dd>
                    </dl>

                    <form asp-action="Delete" asp-route-id="@Model.StockId" method="post" class="mt-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="StockId" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash-fill me-1"></i> Yes, Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-1"></i> No, Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>