@model DAL.Models.Stock

@{
    ViewData["Title"] = "Stock Location Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-search me-2"></i>@ViewData["Title"]</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to List
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Details for: @Model.StockName</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.StockName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.StockName)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.StockAddress)
                </dt>
                <dd class="col-sm-9">
                    @(string.IsNullOrWhiteSpace(Model.StockAddress) ? "N/A" : Model.StockAddress)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model.StockId" class="btn btn-primary">
                <i class="bi bi-pencil-square me-1"></i> Edit
            </a>
        </div>
    </div>
</div>