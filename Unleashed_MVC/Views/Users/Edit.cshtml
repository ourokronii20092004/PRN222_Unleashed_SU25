@using DAL.DTOs.UserDTOs
@model UserDetailDTO

@{
    ViewData["Title"] = "Edit User";
}

<div class="container mt-4">
    <h1 class="mb-3 text-center">Edit User Account</h1>
    <hr class="mb-4" />

    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0">Update User Information</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" enctype="multipart/form-data" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="IsUserEnabled" class="form-label fw-bold">Account Status</label>
                            <select asp-for="IsUserEnabled" class="form-select">
                                <option value="true">Enabled</option>
                                <option value="false">Disabled</option>
                            </select>
                            <span asp-validation-for="IsUserEnabled" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserUsername" class="form-label fw-bold">Username</label>
                            <input asp-for="UserUsername" class="form-control" readonly />
                            <span asp-validation-for="UserUsername" class="text-danger"></span>
                            <div class="form-text text-muted">Username cannot be changed.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserFullname" class="form-label fw-bold">Full Name</label>
                            <input asp-for="UserFullname" class="form-control" placeholder="Enter the user's full name" />
                            <span asp-validation-for="UserFullname" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserEmail" class="form-label fw-bold">Email Address</label>
                            <input asp-for="UserEmail" class="form-control" type="email" placeholder="Enter a valid email address" />
                            <span asp-validation-for="UserEmail" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserPhone" class="form-label fw-bold">Phone Number</label>
                            <input asp-for="UserPhone" class="form-control" type="tel" placeholder="e.g., 0912345678" />
                            <span asp-validation-for="UserPhone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserBirthdate" class="form-label fw-bold">Birthdate</label>
                            <input type="date" asp-for="UserBirthdate" class="form-control" />
                            <span asp-validation-for="UserBirthdate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserAddress" class="form-label fw-bold">Address</label>
                            <input asp-for="UserAddress" class="form-control" placeholder="Enter full address" />
                            <span asp-validation-for="UserAddress" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="mb-2">
                                @if (!string.IsNullOrEmpty(Model.UserImage))
                                {
                                    <img src="@Model.UserImage" alt="Current Profile Image" class="img-thumbnail" style="max-width: 150px; height: auto; border-radius: 8px;" />
                                }
                                else
                                {
                                    <p class="text-muted">No profile image uploaded.</p>
                                }
                            </div>
                            <label class="form-label fw-bold" for="profileImageFile">Profile Image (Optional)</label>
                            <input type="file" id="profileImageFile" name="profileImageFile" />
                            <input hidden asp-for="UserImage" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Gender</label>
                            <div class="d-flex">
                                <div class="form-check form-check-inline me-3">
                                    <input class="form-check-input" type="radio" value="false" asp-for="Gender" id="genderMale" />
                                    <label class="form-check-label" for="genderMale">Male</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" value="true" asp-for="Gender" id="genderFemale" />
                                    <label class="form-check-label" for="genderFemale">Female</label>
                                </div>
                            </div>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg"><i class="bi bi-save me-2"></i>Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4 mb-5">
        <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-2"></i>Back to User List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}