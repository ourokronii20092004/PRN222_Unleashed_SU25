@model IEnumerable<DAL.Models.User>

@{
    ViewData["Title"] = "User Management"; // More descriptive title
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1><i class="bi bi-people-fill me-2"></i> @ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-success d-flex align-items-center">
            <i class="bi bi-plus-circle-fill me-2"></i> Create Employee Account
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IsUserEnabled)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserUsername)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserFullname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserEmail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserPhone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserBirthdate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserImage)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserCreatedAt)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserUpdatedAt)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Role)
                    </th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" asp-for="@item.IsUserEnabled" disabled />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserUsername)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserFullname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserEmail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserPhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserBirthdate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserAddress)
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.UserImage))
                            {
                                <img src="@item.UserImage" alt="User Image" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserCreatedAt)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserUpdatedAt)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender) == 0 ? "Male" : "Female" @* Assuming Gender has a GenderName property *@
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Role.RoleName) @* Assuming Role has a RoleName property *@
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-sm btn-primary" title="Edit"><i class="bi bi-pencil-fill"></i></a>
                                <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-sm btn-info ms-1" title="Details"><i class="bi bi-info-circle-fill"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-sm btn-danger ms-1" title="Delete"><i class="bi bi-trash-fill"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>