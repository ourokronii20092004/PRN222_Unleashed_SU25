@model IEnumerable<DAL.DTOs.AccountDTOs.AccountDetailDTO>

@{
    ViewData["Title"] = "Accounts";
}

<div class="container mt-4">
    <h1 class="mb-4">Account Management</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Account</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IsEnabled)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fullname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImageLink)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UpdatedDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Role)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (item.IsEnabled.GetValueOrDefault(false))
                            {
                                <span class="badge bg-success">Enabled</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Disabled</span>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fullname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ImageLink))
                            {
                                <img src="@item.ImageLink" alt="User Image" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdatedDate)
                        </td>
                        <td>
                            @if (item.Gender.HasValue)
                            {
                                @(item.Gender.Value ? "Female" : "Male")
                            }
                            else
                            {
                                @:Unknown
                            }
                        </td>
                        <td>
                                @Html.DisplayFor(modelItem => item.Role.RoleName)
                        </td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Account Actions">
                                <a asp-action="Edit" asp-route-username="@item.Username" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a asp-action="Details" asp-route-username="@item.Username" class="btn btn-sm btn-outline-info">Details</a>
                                <a asp-action="Delete" asp-route-username="@item.Username" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>